@using Microsoft.AspNetCore.Mvc.RazorPages
@{
	var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>@ViewData["Title"] - Portal.ControleFinanceiro</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Portal.ControleFinanceiro.styles.css" asp-append-version="true" />
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Bootstrap Icons -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body class="d-flex flex-column min-vh-100">
	<header>
		<h1>
			<a href="/" style="text-decoration: none; color: inherit;">
				<i class="bi bi-cash-coin"></i> GRANA - Controle Financeiro
			</a>
		</h1>
	</header>

	<!-- Menu -->
	<nav class="nav justify-content-center bg-white py-2">
		<a class="btn btn-outline-success me-2 @(currentPage == "/Controle/RegistrarCompra" ? "active" : "")"
		   asp-page="/Controle/RegistrarCompra">
			<i class="bi bi-cart-plus"></i> Registrar Compra
		</a>

		<a class="btn btn-outline-success me-2 @(currentPage == "/Controle/RegistrarEntrada" ? "active" : "")"
		   asp-page="/Controle/RegistrarEntrada">
			<i class="bi bi-wallet2"></i> Registrar Entrada
		</a>

		<a class="btn btn-outline-success me-2 @(currentPage == "/Controle/Resumo" ? "active" : "")"
		   asp-page="/Controle/Resumo">
			<i class="bi bi-bar-chart-line"></i> Resumo
		</a>

		<a class="btn btn-outline-success me-2 @(currentPage == "/Controle/Fixos" ? "active" : "")"
		   asp-page="/Controle/Fixos">
			<i class="bi bi-building"></i> Gastos Fixos
		</a>
	</nav>

	<div class="container">
		<main role="main" class="flex-fill">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - Portal.ControleFinanceiro</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>



	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>