@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="text-center mb-4">
    <i class="bi bi-person-circle icon-brand" style="font-size: 3.5rem;"></i>
    <h3 class="mt-3 mb-1 text-brand">Acesso ao GRANA</h3>
    <small style="color:#a8d5ce;">Controle Financeiro Pessoal</small>
</div>

@if (!string.IsNullOrEmpty(Model.MensagemErro))
{
    <div class="alert alert-danger">@Model.MensagemErro</div>
}

<form method="post" autocomplete="off">
    <div class="mb-3">
        <label asp-for="Input.Usuario" class="form-label">Usuário</label>
        <input asp-for="Input.Usuario" class="form-control" placeholder="Digite seu usuário" />
    </div>
    <div class="mb-3">
        <label asp-for="Input.Senha" class="form-label">Senha</label>
        <input asp-for="Input.Senha" type="password" class="form-control" placeholder="••••••••" />
    </div>

    <button type="submit" class="btn btn-login w-100">Entrar</button>
</form>


