@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    // 📅 Captura todos os meses únicos ordenados
    var meses = Model.ResumoGeral?
        .Select(x => x.MesAno)
        .Distinct()
        .OrderBy(m => DateTime.ParseExact(m, "MM/yyyy", null))
        .ToList() ?? new List<string>();

    // 👤 Agrupar por pessoa
    var pessoas = Model.ResumoGeral?
        .GroupBy(x => x.Pessoa)
        .OrderBy(g => g.Key)
        .ToList();
}

<style>
    :root {
        --main-color: #264653;
        --accent-color: #2a9d8f;
        --bg-color: #f8f9fa;
        --text-color: #343a40;
        --button-bg: #2a9d8f;
        --button-hover: #1f6f68;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }

    .main-container {
        max-width: 900px;
        margin: 60px auto 80px auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(38, 70, 83, 0.15);
        padding: 40px 50px;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    h1 {
        font-weight: 700;
        font-size: 3rem;
        /* color: var(--main-color); */
        margin-bottom: 10px;
        letter-spacing: 1.5px;
    }

    p.lead {
        font-size: 1.25rem;
        color: var(--accent-color);
        line-height: 1.5;
        max-width: 700px;
        margin-bottom: 30px;
    }

    a.btn-primary {
        display: inline-block;
        background-color: var(--button-bg);
        color: white;
        padding: 14px 36px;
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        width: fit-content;
        box-shadow: 0 4px 10px rgba(42, 157, 143, 0.4);
        cursor: pointer;
    }

    a.btn-primary:hover {
        background-color: var(--button-hover);
        box-shadow: 0 6px 15px rgba(31, 111, 104, 0.7);
        color: white;
    }

    .alert-danger {
        max-width: 900px;
        margin: 30px auto;
        border-radius: 8px;
        padding: 15px 25px;
        font-weight: 600;
        box-shadow: 0 4px 12px rgba(231, 111, 81, 0.3);
        background-color: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }

   
  
</style>

@if (!string.IsNullOrEmpty(Model.Mensagem))
{
    <div class="alert @(Model.Sucesso ? "alert-success" : "alert-danger") alert-dismissible fade show shadow-sm mt-3" role="alert">
        <pre class="m-0">@Model.Mensagem</pre>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
else if (pessoas != null && pessoas.Any())
{
    <div class="main-container">
        <h1>Resumo Financeiro</h1>

        <p class="lead">Veja abaixo o saldo atual:</p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped text-center">
                <thead class="thead-dark">
                    <tr>
                        <th style="text-align:left;">Pessoa</th>
                        @foreach (var mes in meses)
                        {
                            <th>@mes</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var grupo in pessoas)
                    {
                        <tr>
                            <td style="text-align:left;">@grupo.Key</td>
                            @foreach (var mes in meses)
                            {
                                var valor = grupo.FirstOrDefault(x => x.MesAno == mes)?.SaldoRestante ?? 0;
                                <td>R$ @valor.ToString("N2")</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p class="text-center">Nenhum dado encontrado.</p>
}


